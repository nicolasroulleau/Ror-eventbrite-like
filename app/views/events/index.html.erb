<h1>Index des événements créés</h1>
<p>ça va envoyer du pâté !!!</p>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Description</th>
      <th>Place</th>
      <th>Créateur</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
      	<td><%= event.date %></td>
        <td><%= event.description %></td>
         <td><%= event.place %></td>
          <td><%= event.creator.name %></td>
        <td><%= link_to 'Voir', event %></td>
        <td><%= link_to 'Editer', edit_event_path(event) %></td>
        <td><%= link_to 'Effacer', event, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div><%= link_to"Créer un nouvel événement",new_event_path %></div>