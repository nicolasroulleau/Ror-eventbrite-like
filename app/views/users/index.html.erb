<h1>Index des Utilisateurs enregistrés</h1>
<p>Bienvenue sur mon app</p>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Nom</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
      	<td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= link_to 'Voir', user %></td>
        <td><%= link_to 'Editer', edit_user_path(user) %></td>
        <td><%= link_to 'Effacer', user, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div><%= link_to"Créer un nouvel utilisateur",new_user_path %></div>


